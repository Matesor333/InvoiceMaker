<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="demo.prorotypeinvocemaker.Controllers.CompanyDetailsController"
      spacing="20" styleClass="tab-content-area">

    <Label text="Company Information" styleClass="header-label"/>

    <!-- Main Content Split -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">

        <!-- LEFT COLUMN: Contact Details -->
        <VBox spacing="15" HBox.hgrow="ALWAYS">
            <Label text="Contact Details" styleClass="subheader-label"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- Row 0 -->
                <Label text="Company Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="companyNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Row 1 -->
                <Label text="ID Num:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="companyIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Row 2 -->
                <Label text="Address Line 1:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="addressLine1Field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Row 3 -->
                <Label text="Address Line 2:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="addressLine2Field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Row 4 -->
                <Label text="City:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="cityField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- Row 5 -->
                <Label text="Postcode:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="postcodeField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <!-- Row 6 -->
                <Label text="Phone:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <!-- Row 7 -->
                <Label text="Email:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <!-- Row 8 -->
                <Label text="Tax/VAT:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <TextField fx:id="taxNumberField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>

        <!-- VERTICAL SEPARATOR -->
        <Separator orientation="VERTICAL"/>

        <!-- RIGHT COLUMN: Bank & Config -->
        <VBox spacing="15" HBox.hgrow="ALWAYS">
            <Label text="Bank Details" styleClass="subheader-label"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Bank Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="bankNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Account Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="accountNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="IBAN:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="ibanField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="SWIFT/BIC:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="swiftField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <Separator/>

            <Label text="Configuration" styleClass="subheader-label"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Save Folder:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <HBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <TextField fx:id="saveLocationField" editable="false" HBox.hgrow="ALWAYS"/>
                    <Button text="..." onAction="#handleBrowseLocation"/>
                </HBox>
            </GridPane>

        </VBox>
    </HBox>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="statusLabel" style="-fx-text-fill: #2ecc71;"/>
        <Button text="Reset" onAction="#handleReset" styleClass="button"/>
        <Button text="Save Company Details" onAction="#handleSave" styleClass="primary-button"/>
    </HBox>

</VBox>
