<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="demo.prorotypeinvocemaker.CreateInvoiceController"
      spacing="15" style="-fx-padding: 20;">


    <Label text="New Invoice" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Top Row: Customer Type AND Currency -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Customer Type:"/>
            <ChoiceBox fx:id="customerTypeBox" prefWidth="150"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Currency:"/>
            <ChoiceBox fx:id="currencyBox" prefWidth="100"/>
        </HBox>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER_RIGHT">
                <Label text="Invoice ID (Preview):" style="-fx-font-size: 10px;"/>
                <Label fx:id="invoiceIdLabel" text="---" style="-fx-font-weight: bold;"/>
            </VBox>
        </HBox>
    </HBox>

    <!-- Customer Details Form -->
    <GridPane fx:id="customerDetailsPane" hgap="10" vgap="10">

        <!-- Row 0: Name -->
        <Label fx:id="nameLabel" text="Company Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>

        <!-- Row 1: Address -->
        <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300"/>

        <!-- Row 2: City / Postcode / Country -->
        <Label text="City / Postcode / Country:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <TextField fx:id="cityField" promptText="City" prefWidth="110"/>
            <TextField fx:id="postcodeField" promptText="Postcode" prefWidth="80"/>
            <TextField fx:id="countryField" promptText="Country" prefWidth="100"/>
        </HBox>

        <!-- Row 3: ID (Dynamic) -->
        <Label fx:id="idLabel" text="Company ID:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="idField" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="300"/>

        <!-- Row 4: VAT (Dynamic) -->
        <Label fx:id="vatLabel" text="VAT Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="vatField" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="300"/>

    </GridPane>

    <Separator/>


    <Label text="Invoice Items" style="-fx-font-weight: bold;"/>
    <TableView fx:id="itemsTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="serviceCol" text="Service Description" prefWidth="400"/>
            <TableColumn fx:id="amountCol" text="Amount" prefWidth="150"/>
        </columns>
    </TableView>


    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="newServiceField" promptText="Service Description" prefWidth="300"/>
        <TextField fx:id="newAmountField" promptText="Amount (0.00)" prefWidth="100"/>
        <Button text="Add Item" onAction="#handleAddItem"/>
    </HBox>

    <Separator/>


    <GridPane hgap="10" vgap="10" alignment="CENTER_RIGHT">
        <Label text="Total Amount:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="totalAmountLabel" text="0.00" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Payment Due Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dueDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
        <Button text="Generate Invoice" style="-fx-background-color: #2196F3; -fx-text-fill: white;" onAction="#handleGenerate"/>
    </HBox>

</VBox>
